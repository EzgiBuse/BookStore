@model List<Category>
<partial name="_Notification"/>
<div class="col-6 text-end">
    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"> </i> Create new Category
    </a>
</div>

<h1>Category List</h1>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Diplay Order
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obs in Model.OrderBy(u=>u.DisplayOrder))
        {
            
        
        <tr>
            <td>@obs.Name</td>
            <td>@obs.DisplayOrder</td>
            <td>
            <div class="w-75 btn-group" role="group">
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obs.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil"></i> Edit
                </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obs.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                    </a>
            </div>
                </td>
        </tr>
        }
    </tbody>
</table>
